case $2 in
+)echo The addition of $1 and $3 is $(($1+$3));;
-)echo The subtraction of $1 and $3 is $(($1-$3));;
x)echo The multiplication of $1 and $3 is $(($1*$3));;
/)echo The division of $1 and $3 is $(($1/$3));;
%)echo The remainder of $1 and $3 is $(($1%$3));;
^)echo $1 powered $3 is $(($1**$3));;
*)echo Invalid input!
esac
